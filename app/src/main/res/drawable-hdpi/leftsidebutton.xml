<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#26ffffff"/>

            <stroke
                android:width="4dp"
                android:color="#26ffffff" />
            <corners
                android:radius="45dp" />
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="#26ffffff"/>
            <stroke
                android:width="2dp"
                android:color="#26ffffff" />
            <corners
                android:radius="45dp" />
            <padding
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp" />
        </shape>
    </item>
</selector>